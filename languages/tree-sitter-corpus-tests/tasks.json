[
  {
    "label": "Run all corpus tests",
    "command": "tree-sitter",
    "args": ["test"]
  },
  {
    "label": "Update all corpus test parse trees",
    "command": "tree-sitter",
    "args": ["test", "-u"]
  },
  {
    "label": "Run current file's test",
    "command": "tree-sitter",
    "args": ["test", "--file-name", "$ZED_RELATIVE_FILE"]
  },
  {
    "label": "Update current file parse trees",
    "command": "tree-sitter",
    "args": ["test", "--file-name", "$ZED_RELATIVE_FILE", "-u"]
  },
  {
    "label": "Run current test",
    "command": "tree-sitter",
    "args": ["test", "-i", "\"$ZED_SYMBOL\""]
  },
  {
    "label": "Run current test in debug mode",
    "command": "tree-sitter",
    "args": ["test", "-i", "\"$ZED_SYMBOL\"", "-d"]
  },
  {
    "label": "Run current test and open debug graph",
    "command": "tree-sitter",
    "args": ["test", "-i", "\"$ZED_SYMBOL\"", "-D", "&&", "open", "log.html"]
  }
]
